        <activity
            android:name="com.websarva.wings.android.bocian.activity.FixturesActivity"
            android:label="@string/fixtures"></activity>
        <!--まだ-->
        <!--編集企業選択画面-->
        <activity
            android:name="com.websarva.wings.android.bocian.activity.SelectedCompanyActivity"
