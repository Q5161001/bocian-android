            android:name="com.websarva.wings.android.bocian.activity.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <!--スケジュール画面-->
        <activity
            android:name="com.websarva.wings.android.bocian.activity.ScheduleActivity"
            android:label="@string/scheduleActivity">
        </activity>
        <!--新規予約画面-->
        <activity
            android:name="com.websarva.wings.android.bocian.activity.NewReservationActivity"
            android:label="@string/new_reservation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--参加者追加画面-->
        <activity
            android:name="com.websarva.wings.android.bocian.activity.AddMemberActivity"
            android:label="@string/add_member"></activity>
        <!--参加者追加画面（社外者）-->
        <activity
            android:name="com.websarva.wings.android.bocian.activity.AddCustomerActivity"
            android:label="@string/add_member"></activity>
        <!--会社編集画面-->
        <activity
            android:name="com.websarva.wings.android.bocian.activity.EditCompanyActivity"
