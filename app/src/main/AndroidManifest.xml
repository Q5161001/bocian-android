    package="com.websarva.wings.android.bocian">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--予約延長画面-->
        <activity
            android:name="com.websarva.wings.android.bocian.activity.ExtensionActivity"
            android:label="@string/extensionActivity" />
        <!--利用履歴画面-->
        <activity
            android:name="com.websarva.wings.android.bocian.activity.UseHistoryActivity"
            android:label="@string/useHistoryActivity"></activity>
        <!--予約確認画面-->
        <activity
            android:name="com.websarva.wings.android.bocian.activity.BookingConActivity"
